[
  {
    "name": "prometheus",
    "image": "ukti/prometheus",
    "cpu": 1000,
    "memory": 4000,
    "essential": true,
    "privileged": true,
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090,
        "protocol": "tcp"
      },
      {
        "containerPort": 9102,
        "hostPort": 9102,
        "protocol": "tcp"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "prometheus_data",
        "containerPath": "/prometheus"
      }
    ],
    "links": [
      "es_adaptor"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    }
  },
  {
    "name": "es_adaptor",
    "image": "ukti/prometheus-es-adaptor",
    "cpu": 200,
    "memory": 1500,
    "essential": true,
    "privileged": true,
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 65536,
        "hardLimit": 65536
      },
      {
        "name": "memlock",
        "softLimit": -1,
        "hardLimit": -1
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    },
   "environment": [
      {
        "name": "ES_URL",
        "value": "${es_url}"
      }
    ]
  }
]
