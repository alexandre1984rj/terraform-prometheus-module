[
  {
    "name": "prometheus",
    "image": "ukti/prometheus",
    "cpu": 800,
    "memory": 4000,
    "essential": true,
    "privileged": true,
    "environment": [
      {
        "name": "paas_exporter_url",
        "value": "${paas_exporter_url}"
      },
      {
        "name": "paas_exporter_username",
        "value": "${paas_exporter_username}"
      },
      {
        "name": "paas_exporter_password",
        "value": "${paas_exporter_password}"
      },
      {
        "name": "autoscaler_exporter_url",
        "value": "${autoscaler_exporter_url}"
      },
      {
        "name": "eventlogs_exporter_url",
        "value": "${eventlogs_exporter_url}"
      }
    ],
    "portMappings": [
      {
        "containerPort": 9090,
        "hostPort": 9090,
        "protocol": "tcp"
      },
      {
        "containerPort": 9102,
        "hostPort": 9102,
        "protocol": "tcp"
      }
    ],
    "mountPoints": [
      {
        "sourceVolume": "prometheus_data",
        "containerPath": "/prometheus"
      }
    ],
    "links": [
      "es_adaptor"
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    }
  },
  {
    "name": "es_adaptor",
    "image": "ukti/prometheus-es-adaptor",
    "cpu": 200,
    "memory": 750,
    "essential": true,
    "privileged": true,
    "ulimits": [
      {
        "name": "nofile",
        "softLimit": 65536,
        "hardLimit": 65536
      },
      {
        "name": "memlock",
        "softLimit": -1,
        "hardLimit": -1
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${log_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${stream_prefix}"
      }
    },
    "environment": [
      {
        "name": "ES_URL",
        "value": "https://${es_url}"
      },
      {
        "name": "ES_WORKERS",
        "value": "4"
      },
      {
        "name": "ES_BATCH_COUNT",
        "value": "-1"
      },
      {
        "name": "ES_BATCH_SIZE",
        "value": "-1"
      },
      {
        "name": "ES_BATCH_INTERVAL",
        "value": "30"
      }
    ]
  }
]
